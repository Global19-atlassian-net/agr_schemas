{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "genotypeComponent",
  "description": "An enitity that describes the components (allele, etc...) in a genotype, along with their zygosities.",
  "id": "genotypeComponent.json#",
  "type": "object",
  "required": [
       "alleleID","zygosity"
  ],
  "additionalProperties": false,
  "properties": {
    "zygosity":{"enum":["homozygous","heterozygous","hemizygous insertion","hemizygous", "deletion",
    			"hemizygous", "X-linked hemizygous", "Y-linked hemizygous", "homoplastic", "heteroplastic",
			"indeterminate", "unknown"]},
	  //needs to be a GENO term id enumeration -- indeterminate and unknown are the same thing
	  //under allelic state (parent) -- will be enumerated in a spreadsheet.
    "alleleID": {
      "$ref": "../globalId.json#/properties/globalId",
      "description" : "The curie (ie: 'ZFIN:ZDB-ALT-010101-1') for the allele referenced in this relation."
    }
}
