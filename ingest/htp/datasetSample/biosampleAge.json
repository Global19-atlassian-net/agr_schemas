{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Sample Age",
    "description": "an object that holds the temporal aspect of a sample.",
    "id": "biosampleAge.json#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "startStage": {
            "$ref": "../../expression/whenExpressed.json#/properties"
        },
        "intermediateStages": {
            "type": "array",
            "items": {"$ref":"../../expression/whenExpressed.json#/properties"
                     },
            "description": "list of stage objects between the start and end stages"
        },
        "endStage": {
            "$ref": "../../expression/whenExpressed.json#/properties"
        }
    },
    "anyOf": [
        {
            "required": [
                "startStage", "endStage"
            ]
        },
    ]
}
