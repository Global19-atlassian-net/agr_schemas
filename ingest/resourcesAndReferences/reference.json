{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Reference",
  "description": "Any source of information that has curatable data. ie: a publication, article, review, personal communication, etc...",
  "id": "reference.json#",
  "type": "object",
  "required": [
    "primaryID",
    "title",
    "authors",
    "datePublished",
    "citation",
    "allianceCategory"
  ],
  "additionalProperties": false,
  "properties": {
    "primaryID": {
      "$ref": "../globalId.json#/properties/globalId",
      "description": "The globally unique identifier for the resource.  ie: NLMId or ISBN or MOD ID. Each identifier should be prefixed and of the form prefix:id "
    },
    "title": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "$ref": "authorReference.json"
      },
      "uniqueItems": false
    },
    "datePublished": {
      "type": "string",
      "format": "date-time"
    },
    "dateArrivedInPubMed": {
      "type": "string",
      "format": "date-time"
    },
    "dateLastModified": {
      "type": "string",
      "format": "date-time"
    },
    "volume": {
      "type": "text"
    },
    "pages": {
      "type": "text"
    },
    "abstract": {
      "type": "text"
    },
    "citation": {
      "type": "text"
    },
    "keywords": {
      "type": "text"
    },
    "pubMedType": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "this field should come directly as is from PubMed."
      }
    },
    "publisher": {
      "type": "string"
    },
    "allianceCategory": {
      "enum": [],
      "description": "a higher level classification for publications. can also be thought of as a helper grouping for search (ie: facet value)."
    },
    "MODReferenceTypes": {
      "type": "array",
      "items":  {
        "type": "string"
      }
    },
    "issueName": {
      "type": "string"
    },
    "issueDate": {
      "type": "string",
      "format": "date-time"
    },
    "tags": {
      "type":"array",
      "items": {
        "$ref": "referenceTag.json"
      }
    },
    "crossReferences":{
      "type": "array",
      "items":  {
        "$ref": "../crossReference.json"
      }
    },
    "resource": {
      "$ref": "../globalId.json#/properties/globalId"
  }
}
